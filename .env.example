# 应用配置
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="AI Website Tools"

# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/aiwebsitetools?schema=public"

# NextAuth 认证配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"

# OAuth 第三方登录配置
# Google OAuth - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Facebook OAuth - https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret

# Twitter OAuth - https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret

# Discord OAuth - https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Stripe 支付配置
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# PayPal 支付配置
PAYPAL_CLIENT_ID=AXxxx...
PAYPAL_CLIENT_SECRET=EXxxx...
PAYPAL_WEBHOOK_ID=WH-xxx...

# Redis 缓存（可选）
REDIS_URL=redis://localhost:6379

# 邮件服务配置（Resend 或 SendGrid）
EMAIL_SERVER=smtp://apikey:your_key@smtp.sendgrid.net:587
EMAIL_FROM=noreply@yourdomain.com
RESEND_API_KEY=re_xxx

# 文件上传配置
UPLOAD_DIR=./public/uploads
# 或使用 AWS S3
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket

# 管理员配置
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME="System Administrator"
ADMIN_PASSWORD="your-secure-admin-password-change-this"

# 安全配置 - 管理员访问 IP 白名单（逗号分隔）
# 留空允许所有 IP，或指定 IP 如：127.0.0.1,192.168.1.100,10.0.0.1
ADMIN_IP_WHITELIST=

# 安全配置 - 访问频率限制
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# 审计日志配置
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90
